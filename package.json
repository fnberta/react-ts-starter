{
  "name": "react-ts-starter",
  "version": "0.1.0",
  "description": "Very simple react typescript starter kit",
  "private": true,
  "author": "Fabio Berta",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf build && NODE_ENV=production webpack -p",
    "test": "echo 'no tests yet...'",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "precommit": "lint-staged",
    "prepush": "npm run typecheck && npm run test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3",
    "@types/webpack": "^3.8.1",
    "@types/webpack-dev-server": "^2.9.2",
    "awesome-typescript-loader": "^3.4.0",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-loader": "^3.5.3",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.5"
  }
}

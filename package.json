{
  "name": "react-ts-starter",
  "version": "0.1.0",
  "description": "Very simple react typescript starter kit",
  "private": true,
  "author": "Fabio Berta",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "TS_NODE_PROJECT=tsconfig.webpack.json TS_NODE_FILES=true webpack-dev-server --hot",
    "typecheck": "tsc --noEmit",
    "typecheck:build": "tsc --noEmit -p tsconfig.build.json",
    "lint": "tslint --fix 'src/**/*.{ts,tsx}'",
    "build": "rm -rf build && NODE_ENV=production TS_NODE_PROJECT=tsconfig.webpack.json TS_NODE_FILES=true webpack -p"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack": "^4.4.22",
    "@types/webpack-dev-server": "^3.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^2.0.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "prettier": "^1.15.3",
    "style-loader": "^0.23.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "tslint --fix",
      "git add"
    ]
  }
}

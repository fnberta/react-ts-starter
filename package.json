{
  "name": "react-ts-starter",
  "version": "0.1.0",
  "description": "Very simple react typescript starter kit",
  "private": true,
  "author": "Fabio Berta",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "typecheck": "tsc --noEmit",
    "typecheck:build": "tsc --noEmit -p tsconfig.build.json",
    "lint": "tslint --fix 'src/**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,md,yml}'",
    "build": "rm -rf build && NODE_ENV=production webpack -p"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^12.0.7",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "css-loader": "^2.1.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "prettier": "^1.18.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx,json,css,scss,sass,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}

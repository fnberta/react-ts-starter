{
  "name": "react-ts-starter",
  "version": "0.1.0",
  "description": "Very simple react typescript starter kit",
  "private": true,
  "author": "Fabio Berta",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf build && NODE_ENV=production webpack -p",
    "test": "echo 'no tests yet...'",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "precommit": "lint-staged",
    "prepush": "npm run typecheck && npm run test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.2"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/node": "^8.0.14",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.1",
    "@types/react-router-dom": "^4.0.7",
    "@types/webpack": "^3.0.4",
    "@types/webpack-dev-server": "^2.4.0",
    "awesome-typescript-loader": "^3.2.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "ts-node": "^3.2.1",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-loader": "^3.5.3",
    "tslint-plugin-prettier": "^1.1.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  }
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.story.tsx"
  ]
}

{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "max-line-length": [
      true,
      120
    ],
    "no-any": true,
    "object-literal-sort-keys": false,
    "member-access": false,
    "no-console": [
      true,
      "log"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "member-variable-declaration"
    ]
  }
}